<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.6</TargetFrameworks>
    <Authors>Microsoft</Authors>
    <AssemblyName>Serilog.Utilities.ConcurrentCorrelator</AssemblyName>
    <PackageLicenseUrl>https://github.com/Josko8/serilog-utilities-concurrent-correlator/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/Josko8/serilog-utilities-concurrent-correlator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Josko8/serilog-utilities-concurrent-correlator</RepositoryUrl>
    <PackageTags>serilog;log;logging;unit;test;testing;unittest;unittesting</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>A library for unit testing Serilog log events in concurrent testing frameworks.</Description>
    <Copyright>Copyright © 2017 Microsoft</Copyright>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="2.4.0" />
    <PackageReference Include="System.Collections.Immutable" Version="1.3.1" />
  </ItemGroup>

</Project>